<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<link rel="stylesheet" href="{{ asset('css/base.css') }}">
		<link rel="stylesheet" href="{{ asset('css/index.css') }}">
		<div class="body">
			<header class="header">
				<div class="margin_header">
					<div class="logo">
						<a href="{{path ('app_index')}}"><img src="{{asset ('build/img/PETME LOGO.png')}}" alt="PetMe"></a>
					</div>
					<div class="buscar">
						<input type="text" class="buscar_input">
					</div>
					<div class="cerdo">
						<img src="{{asset ('build/img/cerdo.png')}}" alt="img">
					</div>
					<div class="perfil">
						<img src="{{asset ('build/img/usuario.png')}}" alt="perfil">
					</div>
					<div class="menu">
						<img src="{{asset ('build/img/menu.png')}}" alt="menu_burger">
					</div>
				</div>
			</header>

			{% block body %}{% endblock %}

			<footer class="footer">
				<div class="info">
					<a href="{{path ('contact')}}">CONTACTO</a>
				</div>

				<div class="about us">
					<a href="{{path ('about_us')}}">SOBRE NOSOTROS</a>
				</div>
			</footer>
		</div>

	</body>
</html>
